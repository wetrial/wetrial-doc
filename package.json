{
  "name": "wetrial-doc",
  "version": "0.0.1",
  "description": "develop doc",
  "keywords": [
    "wetrial develop doc"
  ],
  "authors": {
    "name": "xiexingen",
    "email": "1002275364@qq.com"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "repository": "https://github.com/wetrial/wetrial-doc",
  "homepage": "https://github.com/wetrial/wetrial-doc",
  "scripts": {
    "start": "npm run dev",
    "dev": "dumi dev",
    "build:doc": "dumi build",
    "patch": "yarn version --patch && git push origin master && git push origin --tags",
    "minor": "yarn version --minor && git push origin master && git push origin --tags",
    "major": "yarn version --major && git push origin master && git push origin --tags",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && yarn lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./",
    "lint:prettier": "check-prettier lint",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier -c --write \"**/*\""
  },
  "dependencies": {
    "@ant-design/icons": "^4.2.1",
    "@wetrial/component": "^0.4.7",
    "@wetrial/core": "^3.3.1",
    "@wetrial/hooks": "^3.0.4",
    "antd": "^4.3.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "use-merge-value": "^1.0.2"
  },
  "peerDependencies": {
    "@ant-design/icons": "*",
    "antd": "*",
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@umijs/fabric": "^2.2.2",
    "@umijs/preset-react": "^1.5.15",
    "check-prettier": "^1.0.3",
    "cross-env": "^7.0.2",
    "del": "^5.1.0",
    "dumi": "^1.0.34",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5",
    "umi": "^3.2.14",
    "yorkie": "^2.0.0"
  },
  "engines": {
    "node": ">=12.16.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "checkFiles": [
    "src/**/*.js*",
    "src/**/*.ts*",
    "src/**/*.md"
  ],
  "license": "MIT"
}
